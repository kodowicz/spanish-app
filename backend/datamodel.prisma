type User {
  id: ID! @id
  name: String! @unique
  email: String! @unique
  password: String!
  draftSet: DraftSet @relation(link: INLINE)
  editSet: EditSet @relation(link: INLINE)
  sets: [Set!]
  learnSets: [LearnSet!]
}

type DraftSet {
  id: ID! @id
  title: String! @default(value: "")
  author: User!
  draftTerms: [DraftTerm!]!
}

type DraftTerm {
  id: ID! @id
  spanish: String! @default(value: "")
  english: String! @default(value: "")
  createdAt: DateTime! @createdAt
  draftSet: DraftSet!
}

type Set {
  id: ID! @id
  title: String! @default(value: "")
  amount: Int! @default(value: 0)
  author: User!
  terms: [Term!]!
}

type Term {
  id: ID! @id
  spanish: String! @default(value: "")
  english: String! @default(value: "")
  createdAt: DateTime! @createdAt
  set: Set!
}

type EditSet {
  id: ID! @id
  title: String! @default(value: "")
  author: User!
  set: Set!
  editTerms: [EditTerm!]!
}

type EditTerm {
  id: ID! @id
  spanish: String! @default(value: "")
  english: String! @default(value: "")
  createdAt: DateTime! @createdAt
  editSet: EditSet!
  term: Term
}

type LearnSet {
  id: ID! @id
  title: String!
  knowledge: Int! @default(value: 0)
  amount: Int!
  author: User!
  set: Set!
  learnTerms: [LearnTerm!]!
}

type LearnTerm {
  id: ID! @id
  spanish: String! @default(value: "")
  english: String! @default(value: "")
  ratio: Int! @default(value: 0)
  mastered: Boolean! @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
  learnSet: LearnSet!
  term: Term!
}
