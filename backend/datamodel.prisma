type User {
  id: ID! @id
  name: String! @unique
  email: String! @unique
  password: String!
  draftSet: DraftSet @relation(link: INLINE)
  sets: [Set!]!
}

type DraftSet {
  id: ID! @id
  title: String! @default(value: "")
  author: User!
  draftTerms: [DraftTerm!]!
}

type DraftTerm {
  id: ID! @id
  spanish: String! @default(value: "")
  english: String! @default(value: "")
  createdAt: DateTime! @createdAt
  draftSet: DraftSet!
}

type Set {
  id: ID! @id
  title: String! @default(value: "")
  amount: Int! @default(value: 0)
  author: User!
  terms: [Term!]!
}

type Term {
  id: ID! @id
  spanish: String! @default(value: "")
  english: String! @default(value: "")
  createdAt: DateTime! @createdAt
  set: Set!
}
